<nml>
  <head>
    <template name="Date" style="width: 100%; aspect-ratio: 1">
      <div
        style="hl-bg: hl-extract(bg, NormalFloat); height: 100%"
        id="daycontainer"
      >
        <div style="text-align: left; padding: 2ch 1ch">%day</div>
      </div>
    </template>
    <style>
      /*asdf */
      nml {
        width: 50%;
      }
      .calendar {
        display: grid;
        grid-template-columns: repeat(7, 1nfr);
        row-gap: 1ch;
        column-gap: 1ch;
      }
      .calendarHeader {
        display: grid;
        grid-template-columns: repeat(7, 1nfr);
        grid-template-rows: 1ch;
        column-gap: 1ch;
        margin: 0ch 1ch;
      }
      .calendarHeader2 {
        display: grid;
        grid-template-columns: repeat(7, 1nfr);
        grid-template-rows: 1ch;
        column-gap: 1ch;
        margin: 0ch 1ch;
      }
      .calendarHeader > div {
        text-align: center;
      }
      body {
        height: 100%;
        padding-left: 2ch;
        padding-top: 2ch;
      }
      /* .gg { */
      /*   height: 6ch; */
      /*   aspect-ratio: 1; */
      /*   hl-bg: linear-gradient(45deg, #000000, #ffffff); */
      /*   margin-bottom: 1ch; */
      /* } */
    </style>
    <title>calendar</title>
  </head>

  <body>
