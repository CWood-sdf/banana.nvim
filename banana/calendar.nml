    <div id="calendarContainer" style="width: 100%">
      <div>
        <span id="month"></span>
        <span sp=" ">%sp</span>
        <span id="year"></span>
      </div>
      <div class="calendarHeader">
        <div class="cool">Sun</div>
        <div>Mon</div>
        <div class="cool">Tue</div>
        <div class="cool">Wed</div>
        <div>Thu</div>
        <div>Fri</div>
        <div>Sat</div>
      </div>
      <div class="calendar"></div>
    </div>
